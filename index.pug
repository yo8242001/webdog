mixin CreateBox(title, content, button, imgName)
    .box
        .content
            h1=title
            p=content
            a(href="#")=button
        .picture
            img(src=imgName)
mixin CreateTitle(id, title, content, aos)
    .title(id=id data-aos=aos)
        h1=title
        p=content

mixin CreatePrice(className, count, title, price, aos, delay)
    .priceBox(class=className data-aos=aos data-aos-delay=delay)
        .icon
            - for (var i=0; i<count; i++)
                span #[img(src="icon.png")]
        h2=title
        h3 #[=price]#[span / year]
        ul
            li 寵物講座
            li 飼料試吃包
            li 寵物寫真
            li 寵物旅館
            li 寵物健康檢查
        a(href="#" class="button") 購買
